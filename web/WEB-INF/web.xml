<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ReservaController</servlet-name>
        <servlet-class>controller.ReservaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EquipamentoController</servlet-name>
        <servlet-class>controller.EquipamentoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorController</servlet-name>
        <servlet-class>controller.ErrorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LaboratorioController</servlet-name>
        <servlet-class>controller.LaboratorioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SoftwareController</servlet-name>
        <servlet-class>controller.SoftwareController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TurmaController</servlet-name>
        <servlet-class>controller.TurmaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservaController</servlet-name>
        <url-pattern>/ReservaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EquipamentoController</servlet-name>
        <url-pattern>/EquipamentoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorController</servlet-name>
        <url-pattern>/ErrorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LaboratorioController</servlet-name>
        <url-pattern>/LaboratorioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SoftwareController</servlet-name>
        <url-pattern>/SoftwareController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TurmaController</servlet-name>
        <url-pattern>/TurmaController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- PÁGINAS DE ERRO - EXCEÇÕES -->
    <error-page>
        <exception-type>java.lang.*</exception-type>
        <location>/ErrorController/</location>
    </error-page>
    <error-page>
        <exception-type>javax.naming.*</exception-type>
        <location>/ErrorController/</location>
    </error-page>
    <!-- PÁGINAS DE ERRO - CÓDIGOS -->
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/error/401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error/403.jsp</location>
    </error-page>
</web-app>
