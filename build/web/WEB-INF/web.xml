<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AlmightyController</servlet-name>
        <servlet-class>controller.AlmightyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RedirectController</servlet-name>
        <servlet-class>controller.RedirectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CounterController</servlet-name>
        <servlet-class>controller.CounterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataController</servlet-name>
        <servlet-class>controller.actions.DataController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoController</servlet-name>
        <servlet-class>controller.InfoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RedirectController</servlet-name>
        <url-pattern>/pagina/*</url-pattern>
        <url-pattern>/reserva/*</url-pattern>
        <url-pattern>/laboratorio/*</url-pattern>
        <url-pattern>/computador/*</url-pattern>
        <url-pattern>/software/*</url-pattern>
        <url-pattern>/curso/*</url-pattern>
        <url-pattern>/error/*</url-pattern>
        <url-pattern>/controle/*</url-pattern>
        <url-pattern>/info/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlmightyController</servlet-name>
        <url-pattern>/AlmightyController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CounterController</servlet-name>
        <url-pattern>/CounterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataController</servlet-name>
        <url-pattern>/DataController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoController</servlet-name>
        <url-pattern>/InfoController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- PÁGINAS DE ERRO - CÓDIGOS -->
    <error-page>
        <error-code>500</error-code>
        <location>/error/500</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/error/401</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error/403</location>
    </error-page>
    <error-page>
        <error-code>440</error-code>
        <location>/error/440</location>
    </error-page>
</web-app>
